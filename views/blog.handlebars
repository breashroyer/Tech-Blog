<!-- views/blog.handlebars -->

<h1>Blog Posts</h1>

{{#each posts}}
  <div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <h3>Comments:</h3>
    <ul>
      {{#each this.comments}}
        <li>{{this.content}} - by {{this.author}}</li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <p>No posts found.</p>
{{/each}}
